<h3>Create new post!</h3>

<%= form_for Post.new do |f| %>
  <%= f.label :title %>:<br>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %>:<br>
  <%= f.text_field :content %><br><br>

  <%= f.label :user %>:<br>
  <%= f.collection_select :user_id, User.all, :id, :username %>

  <br><br>

  <%= f.submit "Submit New Post"%>
<% end %>
